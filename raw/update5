    <script>
        // Custom cursor
        const cursorDot = document.querySelector('.cursor-dot');
        const cursorOutline = document.querySelector('.cursor-outline');
        const trails = [];
        const trailCount = 5;
        
        // Create cursor trails
        for (let i = 0; i < trailCount; i++) {
            const trail = document.createElement('div');
            trail.className = 'cursor-trail';
            trail.style.width = `${20 - i * 3}px`;
            trail.style.height = `${20 - i * 3}px`;
            trail.style.opacity = `${1 - i * 0.2}`;
            document.body.appendChild(trail);
            trails.push({
                element: trail,
                x: 0,
                y: 0,
                delay: (i + 1) * 30
            });
        }
        
        let mouseX = 0;
        let mouseY = 0;
        let outlineX = 0;
        let outlineY = 0;
        let dotX = 0;
        let dotY = 0;
        
        // Move cursor
        const moveCursor = () => {
            const dx = mouseX - outlineX;
            const dy = mouseY - outlineY;
            outlineX += dx * 0.1;
            outlineY += dy * 0.1;
            
            const dotDx = mouseX - dotX;
            const dotDy = mouseY - dotY;
            dotX += dotDx * 0.3;
            dotY += dotDy * 0.3;
            
            cursorOutline.style.left = `${outlineX}px`;
            cursorOutline.style.top = `${outlineY}px`;
            
            cursorDot.style.left = `${dotX}px`;
            cursorDot.style.top = `${dotY}px`;
            
            // Move trails with delays
            trails.forEach((trail, index) => {
                setTimeout(() => {
                    trail.element.style.left = `${dotX}px`;
                    trail.element.style.top = `${dotY}px`;
                }, trail.delay);
            });
            
            requestAnimationFrame(moveCursor);
        };
        
        document.addEventListener('mousemove', function(e) {
            mouseX = e.clientX;
            mouseY = e.clientY;
        });
        
        // Make cursor interactive
        document.querySelectorAll('a, button, .tech-item, .glass-card, .hero-btn').forEach(element => {
            element.addEventListener('mouseenter', () => {
                cursorDot.style.transform = 'translate(-50%, -50%) scale(1.5)';
                cursorDot.style.backgroundColor = 'var(--accent)';
                cursorOutline.style.transform = 'translate(-50%, -50%) scale(1.2)';
                cursorOutline.style.borderColor = 'var(--accent)';
                
                // Change trail colors
                trails.forEach(trail => {
                    trail.element.style.backgroundColor = 'var(--accent)';
                });
            });
            
            element.addEventListener('mouseleave', () => {
                cursorDot.style.transform = 'translate(-50%, -50%) scale(1)';
                cursorDot.style.backgroundColor = 'var(--primary)';
                cursorOutline.style.transform = 'translate(-50%, -50%) scale(1)';
                cursorOutline.style.borderColor = 'var(--primary)';
                
                // Revert trail colors
                trails.forEach(trail => {
                    trail.element.style.backgroundColor = 'var(--primary)';
                });
            });
        });
        
        // Initialize cursor movement
        moveCursor();
        
        // Typed.js for name animation
        document.addEventListener('DOMContentLoaded', function() {
            const typed = new Typed('#typed-name', {
                strings: ["Muhammad Masoom", "a Developer", "a Tech Enthusiast"],
                typeSpeed: 80,
                backSpeed: 40,
                loop: true,
                showCursor: true,
                cursorChar: '|'
            });
        });
        
        // Floating particles for background
        function createParticles() {
            const container = document.body;
            const particleCount = 30;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                // Random size
                const size = Math.random() * 10 + 5;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                
                // Random position
                particle.style.left = `${Math.random() * 100}vw`;
                particle.style.top = `${Math.random() * 100}vh`;
                
                // Random color (purple or cyan)
                particle.style.backgroundColor = Math.random() > 0.5 ? 'var(--primary)' : 'var(--accent)';
                
                // Random animation duration
                particle.style.animationDuration = `${Math.random() * 20 + 10}s`;
                
                container.appendChild(particle);
            }
        }
        
        createParticles();
    </script>
</body>
